extends layout.pug

block content
    header
        p Weatherlog
        a(href='/dashboard') Dashboard
    section#dashboard
        .station_row
            .data_container
                .data_column
                    .text
                        p.data_title= station.name
                        p.data_content= station.latitude
                        p.data_content= station.longitude
                .data_column
                    .text
                        p.data_title Weather
                        p.data_content= station.weatherDescription && station.weatherDescription ? station.weatherDescription : ""
                    .icon#weathericon
                        if measurements[0] && measurements[0].weather
                            if measurements[0].weather.toString().startsWith("8")
                                svg(xmlns='http://www.w3.org/2000/svg' width='30' height='30' fill='currentColor' viewbox='0 0 16 16')
