extends layout.pug

block content
    header
        p Weatherlog
        a(href='/logout') Logout
    section#dashboard
        h1 Dashboard
        each station in stations
            .station_row(id="station_"+station.stationid)
                .data_container
                    .data_column
                        .text.station
                            .id(id=station.stationid)
                            p.data_title.name= station.name
                            p.data_content.latitude= station.latitude
                            p.data_content.longitude= station.longitude
                    .data_column
                        .text
